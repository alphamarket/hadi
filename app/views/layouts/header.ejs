    <script src="<%= node_modules_path %>/materialize-css/dist/js/materialize.min.js"></script>
    <script src="<%= node_modules_path %>/jquery/dist/jquery.min.js"></script>
    <script src="<%= node_modules_path %>/autosize/dist/autosize.min.js"></script>
    <script src="<%= node_modules_path %>/moment/min/moment.min.js"></script>
